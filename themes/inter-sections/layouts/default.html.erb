<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <title><%=h page_title %></title>
  <%= page_header %>
  <%= stylesheet_link_tag '/stylesheets/theme/application.css', :media => 'all' %>

	<script src="/javascripts/jquery.js" type="text/javascript"></script>
	<script src="/javascripts/jquery-ui.js" type="text/javascript"></script>
	<script src="/javascripts/jquery-fx.js" type="text/javascript"></script>

	<%= javascript_include_tag "jquery" %>
	<%= javascript_include_tag "jquery-ui" %>
	<%= javascript_include_tag "jquery-fx" %>

	<!-- Google Analytics -->
	<%= javascript_include_tag "gstats/urchin" %>
	<%= javascript_include_tag "gstats/custom_se" %>
	<%= javascript_include_tag "gstats/track-imagesearch-and-yahoo" %>
	<% javascript_tag do -%>
		_uacct = "UA-2855233-1";
		urchinTracker();	
	<% end -%>
	<!-- End of Google Analytics code -->

	<%#= javascript_include_tag "social/SocialHistory" %>

</head>

<body>
<div id="container">
  <div id="header" onclick="document.location='/'">
  </div>

  <div id="page">
    <div id="content">
      <%= @content_for_layout %>
      <%= javascript_tag 'show_dates_as_local_time()' %>
    </div>

    <div id="sidebar">
      <!-- sidebar components -->
      <%= render_sidebars %>

      <!-- search -->
      <%= render :partial => 'shared/search' %>
    </div>
    <br style="clear:both;" />
  </div>

  <div id="footer">
    <hr />
    <p>Copyright 2007-2008 <%= link_to this_blog.blog_name, this_blog.base_url %></p>
    <ul>
      <li>
        <%= _("Powered by %s", link_to ('typo', 'http://typosphere.org')) %>
      </li>
    </ul>
	<!-- Start of StatCounter Code -->
	<script type="text/javascript">
	var sc_project=3979899; 
	var sc_invisible=1; 
	var sc_partition=48; 
	var sc_click_stat=1; 
	var sc_security="0d2bda20"; 
	</script>

	<script type="text/javascript" src="http://www.statcounter.com/counter/counter.js"></script>
	<noscript>
	<div class="statcounter">
		<a href="http://www.statcounter.com/free_hit_counter.html" target="_blank">
			<img class="statcounter" src="http://c.statcounter.com/3979899/0/0d2bda20/1/" alt="counter hit xanga" >
		</a>
	</div>
	</noscript>
	<!-- End of StatCounter Code -->
  </div>
</div>
</body>
</html>
