!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title=h page_title
    = page_header
    = stylesheet_link_tag "/stylesheets/theme/azure", :media => 'all'
    = stylesheet_link_tag "/stylesheets/user-styles", :media => 'all'
    = stylesheet_link_tag "/stylesheets/theme/print", :media => 'print'
  - benchmark "BENCHMARK: layout/body" do
    %body
      .clearfix#container
        #header
          #logo
            %h1#sitename= link_to this_blog.blog_name, this_blog.base_url
            %h2#subtitle= this_blog.blog_subtitle
        #search
          = render :partial => "shared/search"
        .clearfix#content
          - benchmark "BENCHMARK: layout/content" do
            #main
              = @content_for_layout
              = javascript_tag "show_dates_as_local_time()"
          #sidebar
            #search-results
            - benchmark "BENCHMARK: layout/sidebars" do
              = render_sidebars

            = link_to image_tag("powered.gif"),  "http://www.typosphere.org/", { :class => "powered" }

          %br{ :clear => "all" }/
        #footer
          %ul
            %li
              %a{ :href => "http://validator.w3.org/check?uri=referer" } Valid XHTML 1.0
            %li
              %a{ :href => "http://jigsaw.w3.org/css-validator/validator?uri=#{this_blog.base_url}" } Valid CSS
