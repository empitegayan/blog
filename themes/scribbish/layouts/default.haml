!!!
%html{:xmlns=>"http://www.w3.org/1999/xhtml"}
  %head
    %title=h page_title
    = page_header
    = stylesheet_link_tag '/stylesheets/theme/application.css', :media => 'all'
  
  %body
    #container
      #header
        %h1
          %span= link_to this_blog.blog_name, this_blog.base_url
        %h2= this_blog.blog_subtitle
      
      #page
        #content
          = @content_for_layout
          = javascript_tag 'show_dates_as_local_time()'
        
        #sidebar
          / search
          = render :partial => 'search'
          
          / sidebar components
          = render_sidebars
        %br{:style=>"clear:both"}/
      
      #footer
        %hr/
        %p= link_to this_blog.blog_name, this_blog.base_url
        %ul
          %li= "powered by #{link_to 'typo', 'http://typosphere.org'} /" + |
               "styled with #{link_to 'scribbish', 'http://quotedprintable.com/pages/scribbish'}" |
