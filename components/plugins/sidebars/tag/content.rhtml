<% unless @tags.blank? -%>
<h3>Tags</h3>
<p style="overflow:hidden">
<% @tags.each do |tag| -%>
<span style="font-size:<%= (Math.log(Math.log(tag.article_counter) + 1) + 1) * @font_multiplier %>%"><%= link_to tag.name, :controller => "articles", :action => "tag", :id => tag.name %></span>
<% end -%>
</p>
<% end %>
