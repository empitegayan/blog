<label>Feed URL</label>
<input class="text" type="text" name="configure[<%= @sidebar.id.to_s %>][feed]" value="<%=h @sidebar.staged_config['feed'] %>"/><br/>
<label>Items limit</label>
<input class="text" type="text" name="configure[<%= @sidebar.id.to_s %>][count]" value="<%=h @sidebar.staged_config['count'] %>"/><br/>
<label>Image format</label>
<select name="configure[<%= @sidebar.id.to_s %>][format]">
  <option value="square" <% if @sidebar.staged_config['format']=='square' %>selected="selected"<% end %>>Square</option>
  <option value="rectangle" <% if @sidebar.staged_config['format']=='rectangle' %>selected="selected"<% end %>>Rectangular</option>
</select>
