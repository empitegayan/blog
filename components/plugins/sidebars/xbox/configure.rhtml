<%= form_tag({},{:id => 'configure_'+@sidebar.id.to_s, :class=>'configblock'}) %>
  <label>Xbox Live gamertag</label>
  <input class="text" type="text" name="configure[gamertag]" value="<%=h @sidebar.staged_config['gamertag'] %>"/>
<%= end_form_tag %>

<%= observe_form "configure_"+@sidebar.id.to_s, 
    :url => { :action => "save_config", :id=>@sidebar.id},
    :with => 'value'
 %>
