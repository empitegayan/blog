<div id="sidebar">
  <h1>Tasks:</h1>
  <ul>
    <li><%= link_to 'Back to overview', :action => 'list' %></li>
    <li><%= link_to 'Show this article', :action => 'show', :id => @article.id %></li>
  </ul> 
</div>

<div id="content">
  <h1>Articles</h1>

  <p>Are you sure you want to delete this item?</p>
  <%= start_form_tag %>
  <%= hidden_field "article", "id" %>
  <%= confirm_delete %>
  <%= end_form_tag %>
</div>
