  <% @page_heading = 'Pages' %>

  <% content_for('tasks') do %>
    <%= task_new 'Create new page' %>
    <li><%= link_to 'View page on your blog', @page.permalink_url %></li>
  <% end %>

  <% form_tag({ :action => "edit", :id => @page }, :id => "page_form") do %>
  <h3>Editing page</h3>

  <div class="form">
    <!-- LIVE PREVIEW -->
    <div id="preview" class="post" style="display:none;"></div>
    <!-- /LIVE PREVIEW -->
    <%= render :partial => "form" %>
  </div>

  <div id="operations">
    <%= save %> or <%= cancel %>
  </div>

  <% end %>

  <%= observe_form "page_form",
        :frequency => 2,
        :update => "preview",
        :complete => "Element.show('preview')",
        :url => { :action => "preview" } %>
