<h1>Recent comments</h1>
<ul class="recent">
<% for comment in Comment.find(:all, :limit => 5, :order => 'id DESC' ) %>
  <li>
    <%= link_to truncate(comment.body, 20), :controller => "comments", :action => "show", :id => comment.id, :article_id => comment.article_id %><br />
    by <%= truncate(comment.author, 20) %><br />
    <%= time_ago_in_words(comment.created_at) %> ago
  </li>
<% end %>
</ul>