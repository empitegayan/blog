xm.entry do
  xm.id "tag:#{controller.request.host},2005:Typo-#{item.id}"

  xm.author do
    xm.name item.blog_name
    xm.uri item.url
  end
  xm.published item.created_at.xmlschema
  xm.updated item.updated_at.xmlschema
  xm.title "Trackback from #{item.blog_name}: #{item.title} on #{item.article.title}"

  xm.link "rel" => "alternate", "type" => "text/html", "href" => comment_link(item)

  content = item.excerpt
  xm.content content, "type"=>"html"
end
